@model ImageGalleryAndBlog.Models.ContactModel

<div class="main-grid">

    <!--TOP NAVIGATION-->
    @{
        Html.RenderPartial("_Navigation", Model.Kat);
    }

    <form asp-action="MakeContact"
          method="post"
          enctype="multipart/form-data"
          class="contact-grid">

        <div class="contact-header">
            <h1>Contact me</h1>
            <p>For any informations about your order or if you have questions, don't hesitate to contact me.</p>
        </div>

        <div class="form-group" id="fname">
            <label class="control-label">First Name</label>
            <input asp-for="Name" type="text" type="text" class="form-control1"
                   placeholder="Type first name here" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group" id="lname">
            <label class="control-label">Last Name</label>
            <input asp-for="LastName" type="text" class="form-control1"
                   placeholder="Type first name here" required>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group" id="contanctemail">
            <label class="control-label">Email Adress</label>
            <input asp-for="Email" type="email" class="form-control1"
                   placeholder="Type first name here" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group" id="subject">
            <label class="control-label">Subject</label>
            <input asp-for="Subject" type="text" class="form-control1" placeholder="Type main theme of message" required>
            <span asp-validation-for="Subject" class="text-danger"></span>
        </div>

        <div class="form-group" style="grid-column: 1/3">
            <label class="control-label">Message</label>
            <textarea asp-for="Mess" type="text" style="height: 150px; min-width: 100%; max-width: 100%"
                      class="form-control1"
                      placeholder="Your message goes here" required ></textarea>
            <span asp-validation-for="Mess" class="text-danger"></span>
        </div>
        <input type="submit" value="Send">
    </form>

    <!--Footer-->
    @{
        Html.RenderPartial("_Footer");
    }
</div>

@await Html.PartialAsync("_ValidationScriptsPartial")