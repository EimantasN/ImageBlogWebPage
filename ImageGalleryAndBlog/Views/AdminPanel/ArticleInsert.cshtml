@model ImageGalleryAndBlog.Models.ArticleInsert
<section>

    <div id="page-wrapper">

        <div class="graphs">

            <h3 class="blank1" style="text-align: center">Article Database inserting new record</h3>

            <form asp-action="ArticleInsert"
                  method="post"
                  enctype="multipart/form-data"
                  id="upload-form">

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-12">
                        <input asp-for="Title" required type="text" class="form-control1" id="focusedinput"
                               placeholder="Type article title here">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Author</label>
                    <div class="col-sm-12">
                        <input asp-for="Author" required type="text" class="form-control1"
                               placeholder="Type author name here">
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Article Mini Text</label>
                    <div class="col-sm-12">
                        <textarea asp-for="SubText" required name="subtext" placeholder="Insert article sub-text here..."></textarea>
                        <span asp-validation-for="SubText" class="text-danger"></span>
                        <div class="col-sm-12 jlkdfj1">
                            <p class="help-block">You can just paste text from every text editor word and so on</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Text</label>
                    <div class="col-sm-12">
                        <textarea asp-for="Text" required name="text" placeholder="Insert article main text here..."></textarea>
                        <span asp-validation-for="Text" class="text-danger"></span>
                        <div class="col-sm-12 jlkdfj1">
                            <p class="help-block">You can just paste text from every text editor word and so on</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Article Img Url</label>
                    <div class="col-sm-12">
                        <input asp-for="ImgUrl" required type="text" class="form-control1"
                               placeholder="Insert article image url here">
                        <span asp-validation-for="ImgUrl" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Article Category</label>
                    <div class="col-sm-12">
                        <input asp-for="Category" required type="text" class="form-control1"
                               placeholder="Type article category here">
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-2 control-label">Article Tags</label>
                    <div class="col-sm-12">
                        <input asp-for="Tags" required type="text" class="form-control1"
                               placeholder="Type image tags here">
                        <span asp-validation-for="Tags" class="text-danger"></span>
                        <div class="col-sm-2 jlkdfj1">
                            <p class="help-block">Tags atskirti kableliu (,)</p>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-12">
                        <button type="submit" class="btn-success btn">Insert</button>
                    </div>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-12 control-label" style="height: 25px"></label>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-12 control-label" style="height: 25px"></label>
                </div>

                <div class="form-group">
                    <label for="focusedinput" class="col-sm-12 control-label" style="height: 25px"></label>
                </div>
            </form>
        </div>
    </div>
</section>

@await Html.PartialAsync("_ValidationScriptsPartial")